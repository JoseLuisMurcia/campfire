<html>
<head>
    <title>Chat</title>
    <script src="../../js/chat/chatSocket.js"></script>
    <meta charset="UTF-8"/>
    <style>
        #chatMessages{
            width:500px;
            height:200px;
            border: 2px solid rgb(107, 107, 107);
            font-family: monospace;
            overflow-x: hidden;
            overflow-wrap: break-word;
            background-color: rgb(252, 244, 217);
        }
    </style>
    <h2>Chat Room - {{#chat.name}} {{chat.name}} {{/chat.name}}</h2>
</head>
<body>
    <form action="" onsubmit="submitFunc();return false">
        <p>Type your message: </p>
        <textarea name = 'text' id="textArea" rows=5 cols=40></textarea>
        <input type = 'submit' value='send'/>
    </form>
    <div id = "chatMessages">
        {{#chat}}
            {{#chat.messages}}
                <p>{{user.username}}: {{text}}</p>
            {{/chat.messages}}
        {{/chat}}
    </div>
    <a href="/chat_lobby">Back to lobby</a>
    <var hidden id="roomid">{{chat.id}}</var>
</body>
</html>